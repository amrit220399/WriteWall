<div class="row">
  <div class="col s12 m12">
    <div class="card blue-grey darken-2">
      <div class="card-content white-text">
        <span class="card-title">
        <div class="row">
        <div class="col s10 m10">
          <h2><%= @article.title %></h2>
        </div>
          <div class="col s1 m1">
          <div class="row center">
         <%= link_to '<i class="material-icons">edit</i> Do it'.html_safe,  edit_article_path(@article),
               class: "btn-floating waves-effect waves-light blue" %>
        </div>
        <div class="row center">
        Edit Blog
        </div>
        </div>
        <div class="col s1 m1">
         <div class="row center">
         <%= link_to '<i class="material-icons">delete</i> Do it'.html_safe,  @article,
               method: :delete,
               class: "btn-floating waves-effect waves-light blue",
               data: { confirm: 'Are you sure you want to delete this blog?' }   %>
        </div>
        <div class="row center">
        Delete Blog
        </div>
        </div>
      
          
        
         </div>
          
        </span>
           
        <small>Created at: <%= @article.created_at%></small>
        <br/><br/>
        <big><%= @article.text %></big> 

      </div>
    </div>
  </div>
</div>

<div class="row">
 <div class="col s12 m12">
<h5>Comments:</h5>
<%= render @article.comments %>
</div>
</div>

<div class="row">
 <div class="col s12 m12">
<h5>Add a comment:</h5>
<%= render 'comments/form' %>
</div>
</div>





