<div id="articles-index-banner" class="parallax-container">
    <div class="section no-pad-bot">
      <div class="container">
        <br><br>
        <h2 class="header center white-text text-lighten-2">What's written on the wall today?</h2>
        <div class="row center">
          <h5 class="header col s12 white-text light">Let's look at today's wall of blogs!</h5>
        </div>
      
       

      </div>
    </div>
    <div class="parallax"><img src="/assets/wall_background.jpg" alt="wall background img 1"></div>
</div>

<div class="container">


<% @articles.each do |article| %>
    <div class="row">
    <div class="col s6 m4 d-flex">

    <div class="card" id="myCard">
    <div class="card-panel hoverable">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="/assets/blog1.jpg" height="250px" width="100px">
    </div>
    
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">

     <%= article.title %>

      <i class="material-icons right">more_vert</i></span>
      <p><%= link_to 'Show', article_path(article) %></p>
      <p><%= link_to 'Edit', edit_article_path(article) %></p>
    </div>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">
       
       <%= article.title %>

       <i class="material-icons right">close</i></span>
      
      <p><%= article.text %></p>

    </div>
  </div>
 </div>
   <% end %>
    
</div>


 
  
   
 

</div>