  <%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
        
        
        <div class="row">

        <div class="input-field col s12 m6">
        <i class="material-icons prefix">account_circle</i>
         <%= form.label :commenter %><br>
          <%= form.text_field :commenter %>
        </div>
        
        <div class="input-field input-outlined col s8 m8">
         <i class="material-icons prefix">textsms</i>
         <%= form.label :body ,"Your Comments" %><br>
        <%= form.text_area :body , class: "materialize-textarea" %>
        </div>

        <div class="input-field input-outlined col s4 m4">
        <button class="btn waves-effect waves-light" type="submit" name="action"> 
        <%= form.submit "Add Comment" , class: "white-text" %>
          <i class="material-icons right">send</i>
        </button>
        </div>
 </div>
        
     
    <% end %>