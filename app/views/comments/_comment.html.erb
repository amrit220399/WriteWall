
<div class="row">
  <div class="col s6 m6">
    <div class="card">
      <div class="card-content">
        
        <span class="card-title">
          <%= comment.body %>
         
          
           <%= link_to '<i class="material-icons">delete</i> Do it'.html_safe, [comment.article, comment],
               method: :delete,
               class: "btn-floating waves-effect waves-light red right",
               data: { confirm: 'Are you sure you want to delete this comment?' }   %>
           
         
        </span>
        <small>Added at: <%= comment.created_at %></small><br/><br/>
       
        <i class="material-icons">account_circle</i>   
        <%= comment.commenter %>
        
        <br/><br/>
        

 

 

      </div>
    </div>
  </div>
</div>
